<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zsb.security.dao.SysSettingDao">
    <insert id="saveSysSetting" parameterType="com.zsb.security.vo.SysSettingVo">
        insert into sys_setting (sysName,sysLogo,sysBottomText,sysNoticeText,createTime,updateTime,userInitPassword,sysColor,sysApiEncrypt)
        values (#{sysName},#{sysLogo},#{sysBottomText},#{sysNoticeText},#{createTime},#{updateTime},#{userInitPassword},#{sysColor},#{sysApiEncrypt})
    </insert>

    <select id="querySysInfoById" parameterType="java.lang.Integer" resultType="com.zsb.security.vo.SysSettingVo">
        select * from sys_setting where id = #{id}
    </select>

</mapper>